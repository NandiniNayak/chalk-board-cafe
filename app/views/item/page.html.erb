<h1>Display Menu</h1>

<!--loop through the menu items and display each item in the menu-->
<div class = "row">
        
    <% @menus.each do |menu| %>

        <!--we are going to display, -->
        <!--menu item, price,category,availability,size and picture-->

    <div class = "col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= menu.name%>
               <span class = "badge pull-right"> $<%=menu.price %></span>
            </h3>
          </div>
          <div class="panel-body">
            <p><%= menu.category %></p>
            <p><%= menu.availability == true ? 'Available' : 'Not Available' %></p>
            <p><%= menu.size %></p>
            <p><%= image_tag(menu.picture , width: "100%" ,height: "100%") %></p>
          </div>
        </div>
    </div>

<% end %>
</div>